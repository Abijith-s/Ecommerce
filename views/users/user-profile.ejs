<script>
    function deleteAddress(Aid,userId){
        console.log(Aid)
        let aid = Aid
        let userID = userId
        console.log(aid)
        console.log(userID)
        $.ajax({
            url:'/delete-address',
            data:{aid:aid,userID:userID},
            method:'post',
            success:(response)=>{
                if(response.status){
                    window.location.reload()
                }
            }
        })
    }

   
   


</script>
<script>
    function changePassword(){
       
       data = $("#change-password").serialize()
      
       console.log(data)
       
       
       $("#change-password").submit((e)=>{
           e.preventDefault()
           $.ajax({
           url:'/change-password',
           data:data,
           method:'post',
           success:(response)=>{
            
            if(response.status){
               
                swal("Success!", "Your password has been changed!", "success");
            }else{
              
                swal("Failed!", "Your current password doesn't match!", "error");
            }
           }
       })
       })
      
   }
</script>
